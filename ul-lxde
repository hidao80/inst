#!/bin/sh
. /etc/os-release

if [ "$ID" = "ubuntu" ];then
apt update
apt -y upgrade
ln -sf /usr/share/zoneinfo/Asia/Tokyo /etc/localtime
DEBIAN_FRONTEND=noninteractive apt install -y task-lxde-desktop
apt install -y locales-all task-japanese-desktop ibus-mozc
fi

if [ "$ID" = "debian" ];then
apt update
apt -y upgrade
apt -y install lxde task-japanese task-japanese-desktop
dpkg-reconfigure locales
. /etc/default/locale
apt -y install fcitx-mozc dbus-x11
dpkg-reconfigure tzdata
fi

apt install -y \
    software-properties-common \
    iputils-ping net-tools build-essential \
    vim

curl -sO https://downloads.vivaldi.com/stable/vivaldi-stable_6.5.3206.55-1_arm64.deb
dpkg -i vivaldi-stable_6.5.3206.55-1_arm64.deb
