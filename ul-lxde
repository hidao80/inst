#!/bin/sh
. /etc/os-release

if [ "$ID" = "ubuntu" ];then
apt update
apt -y upgrade
apt install -y locales-all
ln -sf /usr/share/zoneinfo/Asia/Tokyo /etc/localtime
DEBIAN_FRONTEND=noninteractive apt install -y task-lxde-desktop
apt install -y task-japanese-desktop ibus-mozc
fi

if [ "$ID" = "debian" ];then
apt update
apt -y upgrade
apt -y install lxde task-japanese task-japanese-desktop
dpkg-reconfigure locales
. /etc/default/locale
apt -y install fcitx-mozc dbus-x11
dpkg-reconfigure tzdata
fi

apt install -y \
    software-properties-common \
    iputils-ping net-tools build-essential \
    vim

curl -sLkO https://downloads.vivaldi.com/stable/vivaldi-stable_arm64.deb
apt install -y vivaldi-stable_arm64.deb
#dpkg -i vivaldi-stable_arm64.deb
#apt --fix-broken install -y

curl -sLk https://code.visualstudio.com/sha/download?build=stable\&os=linux-deb-arm64 --output vscode_arm64_latest.deb
apt install -y ./vscode_arm64_latest.deb
#dpkg -i vscode_arm64_latest.deb
#apt upgrade -y
